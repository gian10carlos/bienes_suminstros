<!doctype html>
<html lang="en">

<head>
    <!-- titulo -->
    <title>Logistica</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <!-- favicon -->
    <link rel="shortcut icon"
        href="https://static.vecteezy.com/system/resources/previews/012/178/112/non_2x/warehouse-icon-design-free-vector.jpg"
        type="image/x-icon">

    <!-- css -->
    <link rel="stylesheet" href="/logistic/style.css">

    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&display=swap" rel="stylesheet">

    <!-- icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

</head>

<body>

    <section class="section-header">
        <p class="m-0">Logistica</p>
        <a href="/">Cerrar Sesion</a>
    </section>

    <div class="container-hero">
        <div class="col-form">
            <section class="section-form">
                <div class=" col col-12  d-flex justify-content-between">
                    <div class="col col-12">
                        <h2>Crear Orden Compra</h2>
                        <div class="container-table">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Items</th>
                                        <th scope="col">Fecha Entrega</th>
                                        <th scope="col">Proveedor</th>
                                        <th scope="col">Registrar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (dataR) { %>
                                        <% for (let i=0; i < dataR.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <p><%- dataR[i].num_sol %></p>
                                                    <input type="hidden" name="num_sol" id="num_sol"
                                                        value="<%- dataR[i].num_sol %>">
                                                </th>
                                                <td>
                                                    <% for (let j=0; j < dataR[i].items.length; j++) { %>
                                                        <p><%- dataR[i].items[j].descripcion_item %> x <%-
                                                                    dataR[i].items[j].cantidad_solicitado %> <%-
                                                                        dataR[i].items[j].unidad %></p>
                                                        <% } %>
                                                </td>
                                                <td>
                                                    <input type="date" name="date_entr" required>
                                                </td>
                                                <td>
                                                    <select class="form-control" name="proveedor" required>
                                                        <option disabled selected>Proveedor--</option>
                                                        <% for (let i=0; i < dataP.length; i++) { %>
                                                            <option value="<%- dataP[i].ruc %>"><%- dataP[i].nombre %>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                </td>
                                                <td>
                                                    <button class="btn btn-success"
                                                        onclick="setCreateOrderBuy(this)">âœ…</button>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>

    <script src="/logistic/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>